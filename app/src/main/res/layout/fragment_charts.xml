<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.charts.ChartsFragment">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="40dp"
        android:background="@drawable/bg_outline_box"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/column_btn"
            android:background="@drawable/bg_charts_options"
            android:padding="5dp"
            android:rotation="90"
            android:src="@drawable/ic_baseline_bar_chart_24"
            app:tint="@color/red_500" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/pieBtn"
            android:src="@drawable/ic_baseline_pie_chart_grey_outline_24"
            app:tint="@color/red_500" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/columnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.anychart.AnyChartView
            android:id="@+id/any_chart_view_column"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-20dp" />

        <ProgressBar
            android:id="@+id/progress_bar_column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pieLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <com.anychart.AnyChartView
            android:id="@+id/any_chart_view_pie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-20dp" />

        <ProgressBar
            android:id="@+id/progress_bar_pie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>